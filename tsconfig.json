{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "test/*"
      ]
    }
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "src/**/*"
  ]
}
